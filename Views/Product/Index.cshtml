@model List<Product>
<h2>Product List</h2>

@if(ViewBag.Message != null)
{
  <p> @ViewBag.Message</p>
}

<table class="table ">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th> 
            <th>Company</th>
            <td><a asp-controller="Product" type="submit" class="btn btn-primary" asp-action="Create">Create New Product</a></td>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.Company</td>
            <td><a asp-controller="Product" type="submit" class="btn btn-primary" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
           <a asp-controller="Product" type="submit" class="btn btn-primary" asp-action="Delete" asp-route-id="@product.Id">Delete</a></td>
            </tr>
        }
    </tbody>